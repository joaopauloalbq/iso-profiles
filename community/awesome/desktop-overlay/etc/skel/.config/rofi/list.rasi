@import "base.rasi"

* {
	spacing: 0;
}

inputbar {
	border: 0 0 1px 0;
	children: [prompt,entry];
}

prompt {
	font: "Noto Sans 13";
	vertical-align: 0.5;
	padding: 0px 13px;
	border: 0 1px 0 0;
}

entry {
	padding: 12px;
	cursor: text;
	//placeholder: "Search";
}

message{
	border: 0 0 1px 0;
}

textbox {
	padding: 12px;
	horizontal-align: 0.5;
}

listview {
	cycle: false;
	scrollbar: false;
	dynamic: true;
	lines: 10;
}

element {
	border: 0 0 1px 0;
}

element-text {
	padding: 12px 0;
	expand: true;
	vertical-align: 0.5;
	cursor: pointer;
}

element-icon {
	padding: 0 12px;	
	size: 32px;
	cursor: pointer;
}

mode-switcher {
	border: 1px 0 0 0;
	cursor: pointer;
}

button {
	horizontal-align: 0.5;
	border: 0 1px 0 0;
	padding: 10;
	cursor: pointer;
}
