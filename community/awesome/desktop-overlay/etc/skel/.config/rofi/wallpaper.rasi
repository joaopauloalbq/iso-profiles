@import "base.rasi"

window {
	height: 100%;
	width: 400px;
	location: east;
	anchor: east;
	margin: 0;
	border: 0 0 0 2px;
	border-radius: 0;
}


inputbar {
	border: 0 0 1px 0;
	margin: 0 0 -2px 0;
	children: [prompt, entry, icon-add];
	//children: [prompt, entry, icon-prev-page, icon-next-page, icon-add];
}

prompt {
	font: "Noto Sans 18";
	vertical-align: 0.5;
	padding: 0px 15px;
	border: 0 1px 0 0;
}

entry {
	padding: 12px;
}

message{
	border: 0 0 1px 0;
}

textbox {
	padding: 12px;
	horizontal-align: 0.5;
}

listview {
	layout: vertical;
	fixed-columns: true;
	fixed-height: true;
	columns: 1;
    padding: 9px;
	spacing: 9px;
}

element {
	orientation: vertical;
	border-radius: @corner-radius;
    padding: -83px 0;
	//padding: 12px 0px 15px 0px;
}

element selected, element-text selected {
	background-color: @brighter-background-color;
	text-color: @brighter-text-color;
    border: 2px;
    border-color: @highlight-color;
}

element-text {
    enabled: false;
	expand: true;
	horizontal-align: 0.5;
	vertical-align: 0.5;
    //padding: 0px 6px;
	//margin: -20px 0px 0px 0px;
}

element-icon {
	horizontal-align: 0.5;
    border-radius: @corner-radius;
	size: 380px;
}

mode-switcher {
	border: 1px 0 0 0;
}

button {
	horizontal-align: 0.5;
	border: 0 1px 0 0;
	padding: 10;
}

icon-next-page {
	expand: false;
	padding: 12px;
	vertical-align: 0.5;
	filename: "next";
	action: "kb-page-next";
}

icon-prev-page {
	expand: false;
	padding: 12px;
	vertical-align: 0.5;
	filename: "previous";
	action: "kb-page-prev";
}

icon-add {
	padding: 12px;
	expand: false;
	filename: "add";
	action: "kb-custom-1";
}
